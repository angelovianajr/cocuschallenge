{
  "name": "express-rest-es2017-boilerplate",
  "version": "1.2.2",
  "description": "Express boilerplate for building RESTful APIs",
  "author": "Daniel Sousa <sousa.dfs@gmail.com>",
  "main": "src/index.js",
  "private": false,
  "license": "MIT",
  "engines": {
    "node": ">=12",
    "yarn": "*"
  },
  "scripts": {
    "start": "cross-env NODE_ENV=production pm2 start ./src/index.js",
    "dev": "nodemon ./src/index.js",
    "test": "cross-env NODE_ENV=test nyc --reporter=html --reporter=text mocha --timeout 20000 --exit --recursive src/api/tests",
    "test:unit": "cross-env NODE_ENV=test mocha src/api/tests/unit",
    "test:integration": "cross-env NODE_ENV=test mocha --timeout 20000 --exit src/api/tests/integration",
    "test:watch": "cross-env NODE_ENV=test mocha --watch src/api/tests/unit",
    "validate": "yarn test",
    "docker:start": "cross-env NODE_ENV=production pm2-docker start ./src/index.js",
    "docker:dev": "docker-compose -f docker-compose.yml up"
  },
  "dependencies": {
    "axios": "^0.21.1",
    "body-parser": "^1.17.0",
    "compression": "^1.6.2",
    "cors": "^2.8.3",
    "cross-env": "^7.0.3",
    "dotenv-safe": "^8.2.0",
    "express": "^4.15.2",
    "express-joi-validation": "^5.0.1",
    "helmet": "^4.6.0",
    "http-status": "^1.0.1",
    "joi": "^17.6.0",
    "method-override": "^3.0.0",
    "morgan": "^1.8.1",
    "mysql2": "^2.3.3",
    "pm2": "^5.1.0",
    "pug": "^3.0.1",
    "sequelize": "^6.16.3",
    "winston": "^3.1.0"
  },
  "devDependencies": {
    "apidoc": "^0.50.4",
    "chai": "^4.1.0",
    "chai-as-promised": "^7.1.1",
    "mocha": "^9.2.1",
    "nodemon": "^2.0.1",
    "nyc": "^15.1.0",
    "opn-cli": "^1.0.0",
    "sinon": "^7.5.0",
    "sinon-chai": "^3.0.0",
    "supertest": "^6.1.3"
  }
}
